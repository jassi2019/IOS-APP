# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=education_app

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# SMTP Configuration (Optional - for email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@educationapp.com
SMTP_SECURE=false
SMTP_TIMEOUT_MS=10000
DEVELOPER_EMAILS=dev@example.com

# Swagger Configuration
SWAGGER_HOST=localhost:8000

# Canva Integration (Optional)
CANVA_AUTH_REDIRECT_URI=http://localhost:8000/api/v1/canva/callback
CANVA_CLIENT_ID=your_canva_client_id
CANVA_CLIENT_SECRET=your_canva_client_secret
CANVA_AUTHORIZED_PERSON_EMAIL=admin@example.com

# Razorpay Configuration (Optional - Payment features)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Apple IAP Configuration (Required for validating auto-renewable subscriptions)
# App Store Connect -> Apps -> (Your App) -> In-App Purchases -> App-Specific Shared Secret
APPLE_SHARED_SECRET=your_app_store_shared_secret_here
# Must match your iOS bundle identifier (e.g. app.json -> expo.ios.bundleIdentifier)
APPLE_BUNDLE_ID=com.example.app

# Environment
NODE_ENV=development
REQUEST_BODY_LIMIT=10mb

# Dev OTP fallback (when SMTP is unavailable)
# true: API can return OTP in response for local testing (manual entry in app)
# false: OTP only via email
ALLOW_DEV_OTP=false
